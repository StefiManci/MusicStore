@model Album
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <header class="d-flex flex-wrap align-items-center  py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="32" fill="currentColor" class="bi bi-music-note-beamed" viewBox="0 0 16 16">
                    <path d="M6 13c0 1.105-1.12 2-2.5 2S1 14.105 1 13s1.12-2 2.5-2 2.5.896 2.5 2m9-2c0 1.105-1.12 2-2.5 2s-2.5-.895-2.5-2 1.12-2 2.5-2 2.5.895 2.5 2" />
                    <path fill-rule="evenodd" d="M14 11V2h1v9zM6 3v10H5V3z" />
                    <path d="M5 2.905a1 1 0 0 1 .9-.995l8-.8a1 1 0 0 1 1.1.995V3L5 4z" />
                </svg>
                <span class="fs-4">Music Store</span>
            </a>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" hidden type="submit" value="Filter">Search</button>
            </form>
            <ul class="nav nav-pills">
                <li class="nav-item"><a asp-action="Index" asp-controller="Home" class="nav-link" aria-current="page"><button type="button" class="btn btn-outline-info" style="width:100px">Home</button></a></li>
                <li class="nav-item"><a asp-action="Index" asp-controller="Store" class="nav-link"><button type="button" class="btn btn-outline-info" style="width:100px">Store</button></a></li>
                <li class="nav-item"><a asp-action="Index" asp-controller="Cart" class="nav-link"><button type="button" class="btn btn-outline-info" style="width:100px">Cart</button></a></li>
                <li class="nav-item"><a asp-action="Index" asp-controller="Admin" class="nav-link"><button type="button" class="btn btn-outline-info" style="width:100px">Admin</button></a></li>
            </ul>
        </header>

        <div class="row g-5">

            <div class="col-md-12 col-lg-12">
                <h4 class="mb-3">Edit</h4>
                <div asp-validation-summary="All"></div>
                <form asp-action="Edit" method="post">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label for="Name" class="form-label">Title</label>
                            <input type="text" asp-for="Title" class="form-control" id="firstName" placeholder="Title">
                            <input type="text" asp-for="Id" class="form-control" hidden id="firstName" placeholder="Title">

                        </div>
                        <div class="col-sm-6">
                            <label for="Line1" class="form-label">Author</label>
                            <div class="input-group has-validation">

                                <input type="text" asp-for="Author" class="form-control" id="Line1" placeholder="Author">

                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="Line2" class="form-label">Release Year</label>
                            <div class="input-group has-validation">

                                <input type="text" asp-for="ReleaseYear" class="form-control" id="Line2" placeholder="Release Year">

                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="Line2" class="form-label">Genre</label>
                            <div class="input-group has-validation">

                                <input type="text" asp-for="Genre" class="form-control" id="Line2" placeholder="Genre" >

                            </div>
                        </div>
                        <hr class="my-4">
                        <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>