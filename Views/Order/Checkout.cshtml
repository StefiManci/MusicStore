@model Order

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <header class="d-flex flex-wrap align-items-center  py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="32" fill="currentColor" class="bi bi-music-note-beamed" viewBox="0 0 16 16">
                    <path d="M6 13c0 1.105-1.12 2-2.5 2S1 14.105 1 13s1.12-2 2.5-2 2.5.896 2.5 2m9-2c0 1.105-1.12 2-2.5 2s-2.5-.895-2.5-2 1.12-2 2.5-2 2.5.895 2.5 2" />
                    <path fill-rule="evenodd" d="M14 11V2h1v9zM6 3v10H5V3z" />
                    <path d="M5 2.905a1 1 0 0 1 .9-.995l8-.8a1 1 0 0 1 1.1.995V3L5 4z" />
                </svg>
                <span class="fs-4">Music Store</span>
            </a>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit" value="Filter">Search</button>
            </form>
            <div class="dropdown m-1">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Genres
                </a>

                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-action="Index" asp-controller="Home" asp-route-category="Pop">Pop</a></li>
                    <li><a class="dropdown-item" asp-action="Index" asp-controller="Home" asp-route-category="Jazz">Jazz</a></li>
                    <li><a class="dropdown-item" asp-action="Index" asp-controller="Home" asp-route-category="Rock">Rock</a></li>
                    <li><a class="dropdown-item" asp-action="Index" asp-controller="Home" asp-route-category="HipHop">Hip Hop</a></li>
                </ul>
            </div>
            <ul class="nav nav-pills">
                <li class="nav-item"><a asp-action="Index" asp-controller="Home" class="nav-link" aria-current="page">Home</a></li>
                <li class="nav-item"><a asp-action="Index" asp-controller="Store" class="nav-link">Store</a></li>
                <li class="nav-item"><a asp-action="Index" asp-controller="Cart" class="nav-link">Cart</a></li>
                <li class="nav-item"><a asp-action="Index" asp-controller="Admin" class="nav-link">Admin</a></li>
            </ul>
        </header>

        <div class="row g-5">

            <div class="col-md-12 col-lg-12">
                <h4 class="mb-3">Billing address</h4>
                <form asp-action="Checkout" method="post">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label for="Name" class="form-label">Name</label>
                            <input type="text" asp-for="Name" class="form-control" id="firstName" placeholder="Your Name" required="">

                        </div>



                        <div class="col-sm-6">
                            <label for="Line1" class="form-label">Line 1</label>
                            <div class="input-group has-validation">

                                <input type="text" asp-for="Line1" class="form-control" id="Line1" placeholder="Line 1" required="">

                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="Line2" class="form-label">Line 2</label>
                            <div class="input-group has-validation">

                                <input type="text" asp-for="Line2" class="form-control" id="Line2" placeholder="Line 2" required="">

                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="Line3" class="form-label">Line 3</label>
                            <div class="input-group has-validation">

                                <input type="text" asp-for="Line3" class="form-control" id="Line3" placeholder="Line 3" required="">

                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label for="Country" class="form-label">Country</label>
                            <input type="text" asp-for="Country" class="form-control" id="Country" placeholder="Your Country">
                        </div>

                        <div class="col-md-5">
                            <label for="City" class="form-label">City</label>
                            <input type="text" asp-for="City" class="form-control" id="City" placeholder="Your City">
                         
                        </div>

                        <div class="col-md-4">
                            <label for="state" class="form-label">State</label>
                            <input type="text" asp-for="State" class="form-control" id="state" placeholder="Your State">
                            
                        </div>
                        <div class="col-md-4">
                            <label for="Zip" class="form-label">Zip</label>
                            <input type="text" asp-for="Zip" class="form-control" id="state" placeholder="Your Zip">

                        </div>
                        <hr class="my-4">
                        <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to checkout</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>